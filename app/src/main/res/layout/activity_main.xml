<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.asd.myappportfolio.MainActivity">

    <TextView
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="@string/my_nanodegree_apps"
        android:id="@+id/textView"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:autoText="false"
        android:textAlignment="center"
        android:textSize="20dp" />

    <Button
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="@string/popular_movies"
        android:id="@+id/button"
        android:background="#2E3D49"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/button3"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:onClick="showToastPopularMovie" />

    <Button
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:textColor="#ffffff"
        android:background="#2E3D49"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:text="@string/stock_hawk"
        android:onClick="showStockHawk" />

    <Button
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="@string/build_it_bigger"
        android:id="@+id/button3"
        android:textColor="#ffffff"
        android:background="#2E3D49"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:layout_marginBottom="10dp"
        android:onClick="showBuildItBigger" />

    <Button
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="@string/make_your_app_material"
        android:id="@+id/button4"
        android:layout_below="@+id/button3"
        android:background="#2E3D49"
        android:textColor="#ffffff"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:onClick="showMakeYourAppMaterial" />

    <Button
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="@string/go_ubiquitous"
        android:id="@+id/button5"
        android:layout_below="@+id/button4"
        android:background="#2E3D49"
        android:textColor="#ffffff"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:onClick="showGoUbiquitous" />

    <Button
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="@string/capston"
        android:id="@+id/button6"
        android:background="#2E3D49"
        android:textColor="#ffffff"
        android:layout_below="@+id/button5"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:onClick="showCapston" />

</RelativeLayout>
